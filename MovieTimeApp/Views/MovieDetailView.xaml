<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="MovieTimeApp.MovieDetailView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:mynamespace="clr-namespace:MovieTimeApp"
    x:DataType="mynamespace:MovieDetailView"
    BackgroundColor="Transparent">
    <ContentView.Resources>
        <ResourceDictionary>
            <mynamespace:VoteAverangeToFormattedTextStarsConverter x:Key="voteToStars" />
        </ResourceDictionary>
    </ContentView.Resources>
    <ContentView.Content>
        <StackLayout Orientation="Horizontal">
            <AbsoluteLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                <Frame
                    Padding="0"
                    ios:VisualElement.BlurEffect="Light"
                    BackgroundColor="#000000"
                    CornerRadius="10"
                    HasShadow="False"
                    HeightRequest="853"
                    IsClippedToBounds="True"
                    Opacity=".20"
                    Scale=".9"
                    WidthRequest="420" />

            </AbsoluteLayout>
            <StackLayout
                BackgroundColor="Transparent"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand">

                <AbsoluteLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">


                    <Frame
                        Padding="0"
                        BackgroundColor="Transparent"
                        BorderColor="Blue"
                        CornerRadius="10"
                        HasShadow="False"
                        HeightRequest="853"
                        Scale=".9"
                        TranslationX="-210"
                        WidthRequest="420">
                        <StackLayout
                            Padding="10"
                            ios:VisualElement.BlurEffect="None"
                            IsClippedToBounds="True"
                            Spacing="3">
                            <!--
                                Frame
                                HeightRequest="500"
                                HasShadow="False"
                            -->
                            <Frame
                                Margin="0,16,0,12"
                                Padding="0"
                                BackgroundColor="Transparent"
                                CornerRadius="10"
                                HasShadow="False"
                                HeightRequest="532"
                                HorizontalOptions="Center"
                                IsClippedToBounds="True"
                                VerticalOptions="Center"
                                WidthRequest="355">
                                <!--  There are some problems expanding the image  -->
                                <ffimageloading:CachedImage
                                    x:Name="MoviePoster"
                                    HeightRequest="534"
                                    HorizontalOptions="Center"
                                    Source="{Binding Movie.PosterPath, StringFormat='https://image.tmdb.org/t/p/w500{0}'}"
                                    VerticalOptions="Center"
                                    WidthRequest="360" />
                            </Frame>
                            <!--  /Frame  -->
                            <Label
                                FontAttributes="Bold"
                                FontSize="28"
                                Text="{Binding Movie.Title}"
                                TextColor="#FFFFFF" />
                            <!--  Label Text="{Binding Movie.ReleaseDate,StringFormat='Released: {0:MM/dd/yy}'}" TextColor="White"/  -->
                            <Label>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span
                                            FontSize="16"
                                            Text="Released: "
                                            TextColor="#A5A5A5" />
                                        <Span
                                            FontSize="16"
                                            Text="{Binding Movie.ReleaseDate, StringFormat='{0:MM/dd/yy}'}"
                                            TextColor="#FFFFFF" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <!--  Label Text="&#9733;&#9733;&#9733;&#9734;&#9734;" TextColor="Yellow"/  -->
                            <Label
                                x:Name="StarsLabel"
                                FormattedText="{Binding Movie.VoteAverage, Converter={StaticResource voteToStars}}"
                                HeightRequest="30">
                                <!--Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="&#9733;" FontSize="Medium" TextColor="Yellow"/>
                                        <Span Text="&#9733;" FontSize="Medium" TextColor="Yellow"/>
                                        <Span Text="&#9733;" FontSize="Medium" TextColor="Yellow"/>
                                        <Span Text="&#9733;" FontSize="Medium" TextColor="White"/>
                                        <Span Text="&#9733;" FontSize="Medium" TextColor="White"/>
                                    </FormattedString>
                                </Label.FormattedText-->
                            </Label>
                            <Label
                                FontAttributes="Bold"
                                FontSize="14"
                                Text="{Binding Movie.VoteCount, StringFormat='{0:n0} ratings'}"
                                TextColor="#7107CC" />
                            <Label
                                Margin="0,0,0,27"
                                FontSize="Small"
                                LineBreakMode="TailTruncation"
                                MaxLines="3"
                                Text="{Binding Movie.Overview}"
                                TextColor="White" />
                            <StackLayout Orientation="Horizontal">
                                <Grid HeightRequest="44" HorizontalOptions="CenterAndExpand">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Frame
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Padding="0"
                                        BackgroundColor="Transparent"
                                        BorderColor="#6715c4"
                                        CornerRadius="10"
                                        HasShadow="False"
                                        HeightRequest="44"
                                        HorizontalOptions="CenterAndExpand"
                                        WidthRequest="165">
                                        <Label
                                            FontSize="14"
                                            HorizontalOptions="CenterAndExpand"
                                            Text="Back"
                                            TextColor="White"
                                            VerticalOptions="Center" />
                                        <Frame.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="CloseEventHandler" />
                                        </Frame.GestureRecognizers>
                                    </Frame>
                                    <Frame
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Margin="5,0"
                                        Padding="0"
                                        BackgroundColor="#7107CC"
                                        BorderColor="#6715c4"
                                        CornerRadius="10"
                                        HasShadow="False"
                                        HeightRequest="44"
                                        HorizontalOptions="CenterAndExpand"
                                        WidthRequest="165">
                                        <Label
                                            FontSize="14"
                                            HorizontalOptions="CenterAndExpand"
                                            Text="View Trailer"
                                            TextColor="White"
                                            VerticalOptions="Center" />
                                        <Frame.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="CloseEventHandler" />
                                        </Frame.GestureRecognizers>
                                    </Frame>
                                </Grid>
                            </StackLayout>
                        </StackLayout>
                    </Frame>
                    <Grid
                        AbsoluteLayout.LayoutBounds="1, 0, -1, -1"
                        AbsoluteLayout.LayoutFlags="PositionProportional"
                        Opacity="1"
                        TranslationY="28">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="CloseEventHandler" />
                        </Grid.GestureRecognizers>
                        <!--Image
                    x:Name="CloseImage"
                    HeightRequest="30"
                    WidthRequest="30">
                            <Image.Source>
                                <OnPlatform
                            x:TypeArguments="ImageSource"
                            Android="close_circle_button.png"
                            WinPhone="Assets/close_circle_button.png"
                            iOS="close_circle_button.png" />
                            </Image.Source>
                        </Image-->
                        <Ellipse
                            Grid.Row="0"
                            Fill="#6715c4"
                            HeightRequest="30"
                            HorizontalOptions="Start"
                            WidthRequest="30" />

                        <Label
                            FontAttributes="Bold"
                            FontSize="Large"
                            HorizontalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center"
                            Text="X"
                            TextColor="White"
                            VerticalOptions="CenterAndExpand"
                            VerticalTextAlignment="Center" />

                        <!--  Label Text="&#10006;" TextColor="White" FontSize="Large" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>  -->


                    </Grid>
                </AbsoluteLayout>

            </StackLayout>
        </StackLayout>
    </ContentView.Content>
</ContentView>